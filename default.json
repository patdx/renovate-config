{
  "automerge": true,
  "assignees": ["patdx"],
  "extends": ["config:base", "group:allNonMajor"],
  "prHourlyLimit": 1,
  "schedule": "on the first saturday of the month",
  "packageRules": [
    {
      "matchPackageNames": ["nx"],
      "matchPackagePrefixes": ["@nrwl/"],
      "automerge": false
    },
    {
      "groupName": "Astro",
      "matchPackageNames": ["astro"],
      "matchPackagePrefixes": ["@astrojs/"]
    },
    {
      "groupName": "Solid",
      "matchPackageNames": ["solid-js"],
      "matchPackagePrefixes": ["@solidjs/"]
    },
    {
      "groupName": "RJSF",
      "matchPackagePrefixes": ["@rjsf/"]
    },
    {
      "groupName": "Cloudflare",
      "matchPackageNames": ["wrangler"],
      "matchPackagePrefixes": ["@miniflare/", "@cloudflare/"]
    },
    {
      "groupName": "Hattip",
      "matchPackagePrefixes": ["@hattip/"]
    },
    {
      "groupName": "Rakkas",
      "matchPackageNames": ["rakkasjs"],
      "matchPackagePrefixes": ["@rakkasjs/"]
    },
    {
      "groupName": "MobX",
      "matchPackageNames": [
        "mobx",
        "mobx-react",
        "mobx-react-lite",
        "mobx-vue",
        "mobx-vue-lite"
      ]
    }
  ]
}
